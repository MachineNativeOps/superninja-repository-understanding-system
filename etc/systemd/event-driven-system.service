[Unit]
Description=Event Driven Repository Understanding System
After=network.target

[Service]
Type=simple
# Replace with your actual user
User=runner
# Replace with the absolute path to your repository
WorkingDirectory=/home/runner/work/machine-native-ops/machine-native-ops/workspace/tools/repository-understanding
ExecStart=/usr/bin/python3 /home/runner/work/machine-native-ops/machine-native-ops/workspace/tools/repository-understanding/event_driven_system.py
Restart=always
RestartSec=10
StandardOutput=append:/home/runner/work/machine-native-ops/machine-native-ops/workspace/tools/repository-understanding/logs/system.log
StandardError=append:/home/runner/work/machine-native-ops/machine-native-ops/workspace/tools/repository-understanding/logs/error.log

[Install]
WantedBy=multi-user.target
